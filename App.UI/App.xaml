<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="JpegViewer.App.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JpegViewer.App.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->

            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="#3A3C3E"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#F2F3F3"/>
                <Setter Property="FontFamily" Value="Segoe UI Variable"/>
                <Setter Property="FontSize" Value="12.5"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
            
            <Style TargetType="FontIcon">
                <Setter Property="Foreground" Value="#9EA0A2"/>
                <Setter Property="FontSize" Value="14.5"/>
                <Setter Property="FontWeight" Value="Light"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
